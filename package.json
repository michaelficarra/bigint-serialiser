{
  "name": "bigint-serialiser",
  "version": "0.0.1",
  "description": "a transcoder for serialising JavaScript BigInt values to a Uint8Array or any other array-like object",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "nyc ava --fail-fast --verbose"
  },
  "keywords": [
    "bigint",
    "serialiser",
    "transcoder",
    "encoder",
    "decoder",
    "varint",
    "vlq",
    "arraybuffer",
    "dataview",
    "byte array",
    "bytes",
    "bytebuffer"
  ],
  "author": "Michael Ficarra",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-syntax-bigint": "7.4.4",
    "ava": "1.4.1",
    "nyc": "14.1.1"
  },
  "engines": {
    "node": ">=10.4.0"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-syntax-bigint"
        ]
      }
    }
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "reporter": ["text", "lcov"],
    "skip-full": true,
    "skip-empty": true,
    "per-file": true
  }
}
